header
  a(href="/") Home
    i.fab.fa-youtube
  h1=pageTitle
  if errorMsg
    span=errorMsg
  nav 
    ul 
      li
        a(href="/search") Search
      if loggedIn 
        li
          a(href="/videos/upload") Upload Video
        li
          a(href=`/users/${loggedInUser._id}`) #{loggedInUser.name}
        li
          a(href="/users/edit") Edit
        li
          a(href="/users/logout") Log Out
      else
        li
          a(href="/join") Join
        li
          a(href="/login") Login