extends ../base

block content
  div#videoContainer(data-id=video._id)
    video(src="/"+video.fileUrl)
    div#videoControls.videoControls
      div.videoControls__play
        span#play.videoControls__playBtn
          i.fas.fa-play
        div.videoControls__time
          span#currentTime 00:00
          span  / 
          span#totalTime 00:00
      input(type="range", step="0.5" min="0")#timeline.videoControls__timeline
      div.videoControls__volume
        input(type="range", step="0.01" min="0", max="1")#volume
        span#mute Mute 
          i.fas.fa-volume-up
      div 
        span#fullScreen
          i.fas.fa-expand
          
  div.video__data
    p.video__title=video.title
    small.video__owner Uploaded by 
      a(href=`/users/${video.owner._id}`)=video.owner.name
  
  if loggedIn
    div.video__add-comments
        form.video__comment-form#commentForm
            textarea(cols="30", rows="10", placeholder="Write a nice commment...")
            button Add Comment
  
  div.video__comments
    ul 
      each comment in video.comments.reverse()
        li.video__comment(data-id=comment.id)
          i.fas.fa-comment
          span.content  #{comment.text}
          if loggedIn && (String(comment.owner._id) === String(loggedInUser._id))
            span.deleteBtn ðŸ…§
          small.video__comment-owner  by 
            a(href=`/users/${comment.owner._id}`)=comment.owner.name

block scripts
  script(src="/assets/js/videoPlayer.js")
  if loggedIn
    script(src="/assets/js/commentSection.js")